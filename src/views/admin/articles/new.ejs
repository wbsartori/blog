<%- include('../../partials/header.ejs'); %>

<body>
<%- include('../../components/navbar.ejs'); %>

<div class="container">

    <% if(message.length > 0) { %>
        <div class="alert alert-success mt-1">
            <%- message %>
        </div>
    <%} else if(error_message.length > 0) { %>
        <div class="alert alert-danger mt-1">
            <%- error_message %>
        </div>
    <% } %>

    <div class="card mt-5">
        <div class="card-header text-light bg-dark">
            <h2>Cadastro de artigos</h2>
        </div>
        <div class="card-body">
            <form action="/admin/articles/save" method="post">
                <div class="mb-3 row">
                    <label for="title">TÃ­tulo</label>
                    <input type="text" class="form-control" name="title" id="title" placeholder="Defina o titulo do artigo">
                </div>
                <div class="mb-3 row">
                    <select class="form-select" aria-label="Default select example" id="category" name="category">
                        <option selected>---</option>
                        <% categories.forEach(category => { %>
                            <option value="<%= category.id %>"><%= category.title %></option>
                        <% });  %>
                    </select>
                </div>
                <div class="mb-3 row">
                    <label for="body_article">Artigo</label>
                     <textarea class="form-control" placeholder="Digite aqui o seu artigo" name="body_article" id="body_article" rows="15"></textarea>
                </div>

                <button class="btn btn-success mt-3">Cadastrar</button>
                <a href="/articles" class="btn btn-danger mt-3">Cancelar</a>
            </form>
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs'); %>